<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".fragments.bottomsheet.MealBottomSheetFragment">

    <!-- TODO: Update blank fragment layout -->
    <ImageView
        android:id="@+id/img_bottom_sheet"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="5dp"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:id="@+id/linear_btm_sht"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/img_bottom_sheet"
        app:layout_constraintTop_toTopOf="@+id/img_bottom_sheet" >

        <TextView
            android:id="@+id/bottom_sheet_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Palestint"
            android:textColor="@color/black"
            android:drawableStart="@drawable/baseline_location_pin_24"
            android:drawableTint="@color/black"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/bottom_sheet_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="food"
            android:textColor="@color/black"
            android:drawableStart="@drawable/baseline_category_24"
            android:drawableTint="@color/black"
            android:layout_weight="1"/>

    </LinearLayout>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"

        android:layout_marginTop="8dp"
        android:text="meal name"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@+id/linear_btm_sht"
        app:layout_constraintTop_toBottomOf="@+id/linear_btm_sht" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginStart="8dp"

        android:layout_marginTop="9dp"
        android:text="Read more..."
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/textView5"
        app:layout_constraintStart_toStartOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />


</androidx.constraintlayout.widget.ConstraintLayout>